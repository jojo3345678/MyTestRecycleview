    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="4dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp" android:tag="layout/frienditem_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivbigfriend"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="binding_1"                        
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvchatname"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="binding_2"                 />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
         